@model AdotaPatos.Models.Castracao

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cor {
        background: #FF830F;
    }

    .espaco {
        padding-top: 32px;
    }

    label {
        font-weight: bold;
    }
</style>
@using (Html.BeginForm("Edit", "Castracao", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="card">
        <div class="card-header text-white h3 text-center text-white" style="background: #FF830F;">Editar Evento de Castração</div><br />
        <div class="container-fluid">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="NomeEvento">Nome do Evento</label>
                    @Html.EditorFor(model => model.NomeEvento, new { htmlAttributes = new { @class = "form-control", @id = "NomeEvento", @type = "text" } })
                    @Html.ValidationMessageFor(Model => Model.NomeEvento, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    <label for="TipoAnimal">Tipo do Animal</label>
                    <select class=" form-control col-md-10  " name="TipoAnimal" id="TipoAnimal">
                        <option value="">Selecione o Tipo de Animal</option>
                        <option value="Cachorro e Gato">Cachorros e Gatos</option>
                        <option value="Cachorro">Cachorro</option>
                        <option value="Gato">Gato</option>
                    </select>
                    @Html.ValidationMessageFor(Model => Model.TipoAnimal, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    <label for="Dia">Data</label>
                    @Html.EditorFor(model => model.Dia, new { htmlAttributes = new { @class = "form-control", @id = "Dia", @type = "date" } })
                    @Html.ValidationMessageFor(Model => Model.Dia, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    <label for="Sexo">Sexo</label>
                    <select class=" form-control col-md-10  " name="Sexo" id="Sexo">
                        <option value="">Selecione o sexo do Animal</option>
                        <option value="Macho e fêmea">Macho e Fêmea</option>
                        <option value="Macho">Macho</option>
                        <option value="Fêmea">Femea</option>
                    </select>
                    @Html.ValidationMessageFor(Model => Model.Sexo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    <label for="Descricao">Descrição</label>
                    @Html.TextAreaFor(model => model.Descricao, htmlAttributes: new { @class = "form-control", rows = "8" })
                </div>

                <div class="form-group col-md-4">
                    <label for="Total">Total de Animais Castrados</label>
                    @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control", @id = "Total", @type = "text" } })
                    @Html.ValidationMessageFor(Model => Model.Total, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 " style="margin-left: -15px">
                    <button type="submit" class="btn cor text-white"> <i class="fa fa-check "></i> Salvar Evento</button>
                    <a href="/Castracao/Index" class="btn btn-dark text-white"><i class="fa fa-mail-reply "></i> Voltar para Listagem de Eventos</a>
                </div>
            </div>
        </div>
    </div>
}